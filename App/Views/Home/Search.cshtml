@model IEnumerable<QLTV.Models.TuaSach>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with Meyawo landing page.">
    <meta name="author" content="Devcrud">
    <title>Tìm kiếm | TNC</title>
    <link rel="shortcut icon" type="image/png" href="~/Content/assets/icon/favicon.png" />
    <!-- font icons -->
    <link rel="stylesheet" href="~/Content/assets/vendors/themify-icons/css/themify-icons.css">
    <!-- Bootstrap + Steller  -->
    <link rel="stylesheet" href="~/Content/assets/css/meyawo.css">
</head>
<body>
    <!-- Page Header -->
    <header class="header header-mini">
        <div class="header-title">Tìm kiếm sách</div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tìm kiếm sách</li>
            </ol>
        </nav>
    </header> <!-- End Of Page Header -->
    <!-- main content -->
    <div class="container">
        <!-- devider -->
        <div class="py-3"></div>

        <!-- Inputs -->
        <h3>Tìm kiếm nhanh</h3>
        <hr>
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            @*<table>
                <tr>
                    <td>
                        Tên Sản phẩm : <input type="text" name="SearchString" />
                        <input type="submit" value="Tìm kiếm" class="btn btn-warning" />
                    </td>
                </tr>
            </table>*@

    <div class="row mt-5">
        <div class="col-md-6">
            <h6 class="section-secondary-title">Cụm từ tìm kiếm</h6>
            <div class="form-group">
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nhập tên sách..." name="SearchString">
            </div>
        </div>
        <div class="col-md-6">
            <h6 class="section-secondary-title">Tìm bằng</h6>
            <div class="form-group">
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>Tên sách</option>
                    <option>Mã sách</option>
                    <option>Tác giả</option>
                    <option>Nhà xuất bản</option>
                    <option>Thể loại</option>
                </select>
            </div>
        </div>
    </div>
            <div class="form-group col-sm-12 mt-3 text-center">
                <input type="submit" value="Tìm nhanh" class="btn btn-outline-primary rounded">
                <input type="submit" value="Tìm nâng cao" class="btn btn-outline-primary rounded">
            </div>
        }

        <!-- end of inputs -->
        <!-- devider -->
        <div class="py-2"></div>

        <!-- tables -->
        <h5 class="section-secondary-title mt-5">Bảng</h5>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên sách</th>
                    <th scope="col">Tác giả</th>
                    <th scope="col">Tóm Tắt</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.ma_tuasach)</th>
                        <td>@Html.DisplayFor(modelItem => item.TuaSach1)</td>
                        <td>@Html.DisplayFor(modelItem => item.tacgia)</td>
                        <td>@Html.DisplayFor(modelItem => item.tomtat)</td>
                        <td><a href="/MuonSach/AddToCart/@item.ma_tuasach" class="btn btn-primary" style="float:right"> Mua </a></td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- footer -->
        <div class="container mt-5">
            <footer class="footer">
                <p class="mb-0">
                    Create by TT &copy;
                    <script>document.write(new Date().getFullYear())</script>
                </p>
                <div class="social-links text-right m-auto ml-sm-auto">
                    <a href="javascript:void(0)" class="link"><i class="ti-facebook"></i></a>
                    <a href="javascript:void(0)" class="link"><i class="ti-google"></i></a>
                    <a href="javascript:void(0)" class="link"><i class="ti-instagram"></i></a>
                </div>
            </footer>
        </div> <!-- end of page footer -->
        <!-- core  -->
        <script src="~/Content/assets/vendors/jquery/jquery-3.4.1.js"></script>
        <script src="~/Content/assets/vendors/bootstrap/bootstrap.bundle.js"></script>

</body>
</html>
