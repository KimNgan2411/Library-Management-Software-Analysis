@model QLTV.Models.DocGia

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with Meyawo landing page.">
    <meta name="author" content="Devcrud">
    <link rel="shortcut icon" type="image/png" href="~/Content/assets/icon/favicon.png" />
    <title>Quản lý độc giả | TNC</title>
    <!-- font icons -->
    <link rel="stylesheet" href="~/Content/assets/vendors/themify-icons/css/themify-icons.css">
    <!-- Bootstrap + Steller  -->
    <link rel="stylesheet" href="~/Content/assets/css/meyawo.css">
</head>
<body>

    <!-- Page Header -->
    <header class="header header-mini">
        <div class="header-title">Quản lý độc giả</div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("QuanLy","Home")">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý độc giả</li>
                <li class="breadcrumb-item"><a href="index.html"><a href="@Url.Action("Index","TuaSaches")">Quản lý tựa sách</a></li>
                <li class="breadcrumb-item"><a href="index.html"><a href="@Url.Action("Index","DauSaches")">Quản lý đầu sách</a></li>
            </ol>
        </nav>
    </header> <!-- End Of Page Header -->
    <!-- main content -->
    <div class="container">
        <!-- Inputs -->
        <hr>
        <div class="row mt-5">
            <div class="col-md-6">
                <h6 class="section-secondary-title">ID</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.ma_docgia)
                </div>
                <h6 class="section-secondary-title">Họ</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.ho)
                </div>
                <h6 class="section-secondary-title">Tên lót</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.tenlot)
                </div>
                <h6 class="section-secondary-title">Tên</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.ten)
                </div>
            </div>

            <div class="col-md-6">
                <h6 class="section-secondary-title">Tài khoản</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.taikhoan)
                </div>
                <h6 class="section-secondary-title">Mật khẩu</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.matkhau)
                </div>
                <h6 class="section-secondary-title">Vai trò</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.vaitro)
                </div>
                <h6 class="section-secondary-title">Ngày sinh</h6>
                <div class="form-group">
                    @Html.DisplayFor(model => model.NgaySinh)
                </div>
            </div>
        </div> <!-- end of inputs -->
        <div class="form-group col-sm-12 mt-3 text-center">
            <a href="@Url.Action("Edit","DocGias", new { id = Model.ma_docgia })"
                <button type="submit" value="Edit" class="btn btn-primary">Chỉnh sửa</button>
            </a>
        </div>
        <div style="text-align:center">
            @Html.ActionLink("Quay về danh sách", "Index")
        </div>

        <!-- footer -->
        <div class="container mt-5">
            <footer class="footer">
                <p class="mb-0">
                    Create by TT &copy;
                    <script>document.write(new Date().getFullYear())</script>
                </p>
                <div class="social-links text-right m-auto ml-sm-auto">
                    <a href="javascript:void(0)" class="link"><i class="ti-facebook"></i></a>
                    <a href="javascript:void(0)" class="link"><i class="ti-google"></i></a>
                    <a href="javascript:void(0)" class="link"><i class="ti-instagram"></i></a>
                </div>
            </footer>
        </div> <!-- end of page footer -->
</body>
</html>