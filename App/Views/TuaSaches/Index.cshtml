@*@model IEnumerable<QLTV.Models.TuaSach>*@
@using QLTV.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<TuaSach>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .pagination {
            display: inline-block;
        }

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
            }

                .pagination a:hover  {
                    background-color: #ddd;
                }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with Meyawo landing page.">
    <meta name="author" content="Devcrud">
    <link rel="shortcut icon" type="image/png" href="~/Content/assets/icon/favicon.png" />
    <title>Quản lý tựa sách | TNC</title>
    <!-- font icons -->
    <link rel="stylesheet" href="~/Content/assets/vendors/themify-icons/css/themify-icons.css">
    <!-- Bootstrap + Steller  -->
    <link rel="stylesheet" href="~/Content/assets/css/meyawo.css">
</head>
<body>

    <!-- Page Header -->
    <header class="header header-mini">
        <div class="header-title">Quản lý tựa sách</div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("QuanLy","Home")">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý tựa sách</li>
                <li class="breadcrumb-item"><a href="index.html"><a href="@Url.Action("Index","DauSaches")">Quản lý đầu sách</a></li>
                <li class="breadcrumb-item"><a href="index.html"><a href="@Url.Action("Index","DocGias")">Quản lý độc giả</a></li>
            </ol>
        </nav>
    </header> <!-- End Of Page Header -->
    <!-- main content -->
    <div class="container">
        <!-- Inputs -->
        <hr>

        <div class="form-group col-sm-12 mt-3 text-center">
            <a href="@Url.Action("Create","TuaSaches")">
                <button class="btn btn-primary">Thêm</button>
            </a>
        </div>
        <!-- devider -->
        <!-- Alerts -->
        <h3 class="components-section-title font-weight-normal mt-5">Thông báo</h3>
        <hr>
        <div class="alert alert-dark alert-dismissible fade show" role="alert">
            Cập nhật thành công!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <!-- end of alerts -->
        <!-- tables -->
        <h3 class="components-section-title">Bảng</h3>
        <hr>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên sách</th>
                    <th scope="col">Tác giả</th>
                    <th scope="col">Tóm Tắt</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.ma_tuasach)</th>
                        <td>@Html.DisplayFor(modelItem => item.TuaSach1)</td>
                        <td>@Html.DisplayFor(modelItem => item.tacgia)</td>
                        <td>@Html.DisplayFor(modelItem => item.tomtat)</td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ma_tuasach }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ma_tuasach }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ma_tuasach })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- end of tables -->
        <!-- pagedlist -->
        Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        <div class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
        <!-- end of pagedlist -->
        <!-- footer -->
        <div class="container mt-5">
            <footer class="footer">
                <p class="mb-0">
                    Create by TT &copy;
                    <script>document.write(new Date().getFullYear())</script>
                </p>
                <div class="social-links text-right m-auto ml-sm-auto">
                    <a href="javascript:void(0)" class="link"><i class="ti-facebook"></i></a>
                    <a href="javascript:void(0)" class="link"><i class="ti-google"></i></a>
                    <a href="javascript:void(0)" class="link"><i class="ti-instagram"></i></a>
                </div>
            </footer>
        </div> <!-- end of page footer -->
    </div>
        <!-- core  -->
        <script src="~/Content/assets/vendors/jquery/jquery-3.4.1.js"></script>
        <script src="~/Content/assets/vendors/bootstrap/bootstrap.bundle.js"></script>
</body>
</html>